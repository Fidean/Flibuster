<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/bookListFragment">

    <fragment
        android:id="@+id/bookFragment"
        android:name="ru.fidean.flibuster.BookFragment"
        android:label="book_fragment"
        tools:layout="@layout/book_fragment" >
        <argument
            android:name="BookID"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/bookListFragment"
        android:name="ru.fidean.flibuster.BookListFragment"
        android:label="book_list_fragment"
        tools:layout="@layout/book_list_fragment" >
        <action
            android:id="@+id/action_bookListFragment_to_bookFragment"
            app:destination="@id/bookFragment" />
    </fragment>
</navigation>